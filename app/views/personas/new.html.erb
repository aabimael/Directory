<h1>Agregar Persona</h1>

<% form_for(@persona) do |f| %>
  <%= f.error_messages %>

  <table align="center">

    <tr>
      <td valign="top">
        <fieldset>
          <legend>Personales</legend>
          <table>
            <tr>
              <td align="left"><label><%= f.label :nombre %>:</label></td>
              <td align="left"><%= f.text_field :nombres %></td>
            </tr>
            <tr>
              <td align="left"><label>Paterno</label>:</td>
              <td align="left"><%= f.text_field :a_paterno %></td>
            </tr>
            <tr>
              <td align="left"><label>Materno</label>:</td>
              <td align="left"><%= f.text_field :a_materno %></td>
            </tr>
            <tr>
              <td align="right" colspan="2" >
                D&iacute;a <%= f.text_field :dia_cumple, :size => 2 %>
                Mes <%= f.text_field:mes_cumple, :size => 2 %>
                A&ntilde;o <%= f.text_field :anio_cumple, :size => 4 %>
              </td>
            </tr>
            <tr>
              <td align="left"><label><%= f.label :empresa %>:</label></td>
              <td align="left"><%= f.text_field :empresa %></td>
            </tr>
            <tr>
              <td align="left"><label><%= f.label :cargo %>:</label></td>
              <td align="left"><%= f.text_field :cargo %></td>
            </tr>
            <tr>
              <td align="left"><label><%= f.label :nacionalidad %>:</label></td>
              <td align="left"><%= f.text_field :nacionalidad %></td>
            </tr>
          </table>

        </fieldset>
        <br/>

      </td>
      <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
      <td  valign="top">
        <fieldset>
          <legend>Tel&eacute;fonos</legend>
          <table>
            <tr>
              <td align="left"><label>Casa:</label></td>
              <td align="left"><%= f.text_field :tel_particular %></td>
            </tr>
            <tr>
              <td align="left"><label>Oficina:</label></td>
              <td align="left"><%= f.text_field :tel_oficina %>ext: <%= f.text_field :tel_oficina_ext , :size => 5 %></td>
            </tr>
            <tr>
              <td align="left"><label>Movil:</label></td>
              <td align="left"><%= f.text_field :tel_movil %></td>
            </tr>
            <tr>
              <td align="left"><label>Fax:</label></td>
              <td align="left"><%= f.text_field :tel_fax %></td>
            </tr>
          </table>
        </fieldset>
        <br/>
        <fieldset>
          <legend>Direcci&oacute;n</legend>
          <table>
            <tr>
              <td align="left"><label>Calle:</label></td>
              <td align="left"><%= f.text_field :direc_calle %></td>
            </tr>
            <tr>
              <td align="left"><label>Ext.:</label></td>
              <td align="left"><%= f.text_field :direc_ext, :size => 7 %> &nbsp;&nbsp;&nbsp;
                <label>Int.:</label><%= f.text_field :direc_int, :size => 7 %>
              </td>
            </tr>
            <tr>
              <td align="left"><label>Piso:</label></td>
              <td align="left"><%= f.text_field :direc_piso, :size => 7 %></td>
            </tr>
            <tr>
              <td align="left"><label>Col.:</label></td>
              <td align="left"><%= f.text_field :direc_colonia %></td>
            </tr>
            <tr>
              <td align="left"><label>C.P.:</label></td>
              <td align="left"><%= f.text_field :direc_cp %></td>
            </tr>
            <tr>
              <td align="left"><label>Del./Mun.:</label></td>
              <td align="left"><%= f.text_field :direc_delegacion %></td>
            </tr>
            <tr>
              <td align="left"><label>Estado:</label></td>
              <td align="left"><%= f.text_field :direc_estado, :value => "Distrito Federal" %></td>
            </tr>
          </table>
        </fieldset>

      </td>
      <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
      <td>
        <fieldset>
          <legend>Otros</legend>
          <table>
            <tr>
              <td align="left"><label><%= f.label :email %>:</label></td>
              <td align="left"><%= f.text_field :email %></td>
            </tr>
            <tr>
              <td align="left"><label><%= f.label :email_trabajo %>:</label></td>
              <td align="left"><%= f.text_field :email_trabajo %></td>
            </tr>
            <tr>
              <td align="left"><label><%= f.label :pag_web %>:</label></td>
              <td align="left"><%= f.text_field :pag_web, :value => "http://www" %></td>
            </tr>
            <tr>
              <td align="left"><label><%= f.label :asistente %>:</label></td>
              <td align="left"><%= f.text_field :asistente %></td>
            </tr>
            <tr>
              <td align="left" valign="top"><label><%= f.label :notas %>:</label></td>
              <td align="left"><%= f.text_area :notas, :cols => 23, :rows => 10 %></td>
            </tr>
            <tr>
              <td align="left"><label></label></td>
              <td align="left"></td>
            </tr>
          </table>
        </fieldset>
      </td>
    </tr>

  </table>

  <p>
    <%= f.submit 'Crear' %>
  </p>
<% end %>


